cat > tmp1.gnu <<EOF
reset
#--------------------------------------------------------------------------------------------
#---------polar orthonographic 150 km electron density plots particle yes vs no -------------
#--------------------------------------------------------------------------------------------
#hss2007 one
#strftime("%Y %b %d %H:%M:%S", 1169980200)

#hss2011
#strftime("%Y %b %d %H:%M:%S", 1304080200)

set terminal pngcairo enhanced color font "Veranda,18" size 720,720
set output "`printf $outdir`hialden-`printf "%06d" $num`.png"
dd = 1304080200 + `printf $num`
set multiplot title "TEC at ".strftime("%Y %b %d %H:%M:%S", dd)." UT"

set pm3d flush center interpolate 0,0
#set pm3d depthorder
set hidden3d
r = 6427.
#r = 5700.
rz= 8000.
set xrange[-r:r]
set yrange[-r:r]
set zrange[-1000:rz]
set cbrange[0:8]
set cblabel "OpenGGCM-CTIM Integrated e^- Density (TECU)"
set palette rgb 33,13,10 #rainbow (blue-green-yellow-red)
set colorbox horizontal user origin .1, .15 size .8,.04

#set format cb "%1.1t{/Symbol \327}10^{%S}"
#set format cb "10^{%L}"
#set logscale cb

unset key
unset ylabel
unset ytics
unset xlabel
unset xtics
unset ztics
unset border

#set xlabel "x"

#north pole
#set view 360,270,1.00
set view 360,90,1.00
#set view 0,0,1.00
###left plot###
